/* styles for layout */

$monochrome_green: $success-lighten-2;

Screen {
  layers: below above top;
  align: center middle;
  background: $boost;
}

Widget {
  layer: below;
}

.top_layer {
  layer: top;
}

#no_text_region {
  width: 25%;
  height: 100%;
}

.folded#no_text_region {
  width: 0;
  height: 100%;
}

#no_text_region_content_switcher {
  height: 5fr;
}

#status_region {
  height: 1;
  border: none;
  content-align: center middle;
}

.monochrome #status_region {
  color: $monochrome_green;
}

#chat_region {
  border: none;
  width: 1fr;
  height: 1fr;
  scrollbar-size-vertical: 1;
  content-align: left top;
}

#input_switcher {
  height: 1fr;
  border: none;
}

#message_region {
  height: 1fr;
}

#message_region {
  border: round white;
}

.monochrome #message_region {
  color: $monochrome_green;
  background: $monochrome_green 2%;
  border: round $monochrome_green;
}

.monochrome #message_region > .input--cursor {
  color: $monochrome_green;
}

.monochrome #message_region > .input--placeholder {
  color: $monochrome_green 50%;
}

#line_between_chat_status {
  border: none;
  height: 1;
}

.monochrome #line_between_chat_status {
  color: $monochrome_green;
}

#chat_region_scroll_bar {
  width: 1;
  height: 1fr;
  content-align: left top;
  border: none;
}

#chat_window {
  height: 3fr;
}

#middle_bar {
  width: 3;
  border: none;
}

#tool_bar {
  height: 2fr;
  border: none;
}

#dash_board {
  height: 1fr;
  border: none;
  padding: 0;
}

.arrow_button {
  border: none;
  height: 1;
  width: 3;
  min-width: 3;
}

.monochrome.arrow_button {
  color: $monochrome_green;
  background: $monochrome_green 5%;
}

.tab_arrow {
  border: none;
  height: 1;
  width: 1;
  min-width: 1;
}

.monochrome.tab_arrow {
  color: $monochrome_green;
  background: $monochrome_green 5%;
}

#tabs_region {
  height: 2;
}

.dot_display {
  width: 1;
}

#chat_tabs {
  border: none;
  height: 2;
  width: 1fr;
}

.monochrome Underline > .underline--bar {
  color: $monochrome_green;
  background: $monochrome_green 20%;
}

Tab {
  height: 1;
  padding: 0 1 0 2;
}

.monochrome Tab {
  color: $monochrome_green;
}

Tabs #tabs-list {
  min-height: 1;
}

#control_panel {
  width: 1fr;
  height: 1fr;
}

#control_panel {
  border: round $accent-darken-1;
}

.monochrome #control_panel {
  border: round $monochrome_green;
}

#middle_switch {
  border: none;
  width: 3;
}

#control_switch {
  border: none;
  width: 3;
}

#assistant_tube {
  border: round $accent-darken-1;
}

.monochrome #assistant_tube {
  border: round $monochrome_green;
}

#direct_control {
  height: 1;
}

#command_input {
  height: 1fr;
}

.monochrome #command_input {
  color: $monochrome_green;
  background: $monochrome_green 10%;
  border: none;
  padding: 0;
}

.monochrome #command_input > .input--cursor {
  color: $monochrome_green;
}

.monochrome #command_input > .input--placeholder {
  color: $monochrome_green 50%;
}

#control_region {
  height: 2fr;
}

#exit {
  border: none;
  min-width: 6;
  width: 6;
  height: 1;
  padding: 0;
  margin: 0;
}

#exit {
  text-style: bold reverse;
}

.monochrome #exit {
  color: black;
  background: $monochrome_green;
  text-style: bold;
}

#plugin_refresh {
  border: none;
  min-width: 9;
  width: 9;
  height: 1;
  padding: 0;
  margin: 0;
  text-style: reverse;
}

#plugin_label {
  width: 1fr;
  background: rgb(30, 35, 50);
}

.min_switch {
  border: none;
  height: 1;
  min_height: 1;
  padding: 0;
}

ProgressBar Bar {
  width: 1fr;
  height: 1;
}

ProgressBar PercentageStatus {
  text-style: reverse;
  color: $secondary;
  width: 4;
}

ProgressBar Bar > .bar--indeterminate {
  color: $primary;
  background: $secondary;
}

ProgressBar Bar > .bar--bar {
  color: $success;
  background: $primary 40%;
}

ProgressBar Bar > .bar--complete {
  color: $error;
}

Voice #control_region {
  height: 3;
}

.switch_label {
  width: 2;
  height: 1;
}

.switch_label {
  color: $secondary-lighten-2;
}

.monochrome.switch_label {
  color: $monochrome_green;
}

#direct_control_switch {
  width: 1fr;
}

.monochrome.min_switch > .switch--slider {
  color: $monochrome_green 20%;
  background: $monochrome_green 10%;
}

.monochrome.min_switch.-on > .switch--slider {
  color: $monochrome_green;
}

.monochrome #info_display {
  color: $monochrome_green;
}

.monochrome Slider {
  color: $monochrome_green;
}

.monochrome #conversation_tree {
  background: $monochrome_green 2%;
}

.monochrome #conversation_tree > .tree--label {
  color: $monochrome_green;
}

.monochrome #conversation_tree > .tree--cursor {
  color: $monochrome_green;
  background: $monochrome_green 30%;
}

.monochrome #conversation_tree > .tree--guides {
  color: $monochrome_green;
}

.monochrome #conversation_tree > .tree--guides-selected {
  color: $monochrome_green;
}

#directory_tree {
  height: 2fr;
}

.monochrome #directory_tree {
  background: $monochrome_green 2%;
}

.monochrome #directory_tree > .tree--label {
  color: $monochrome_green;
}

.monochrome #directory_tree > .tree--cursor {
  color: $monochrome_green;
  background: $monochrome_green 30%;
}

.monochrome #directory_tree > .tree--guides {
  color: $monochrome_green;
}

.monochrome #directory_tree > .tree--guides-selected {
  color: $monochrome_green;
}

.monochrome ModalScreen {
  color: $monochrome_green;
  background: $monochrome_green;
}

.monochrome ModalScreen Button {
  color: $monochrome_green;
  background: $monochrome_green;
}
